<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChangePasswordFragment">

    <TextView
        android:id="@+id/change_password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/old_password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mật khẩu cũ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_password_textView" />

    <EditText
        android:id="@+id/old_password_editText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/view_edittext"
        android:drawableEnd="@drawable/ic_password"
        android:hint="@string/insert_content"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_password_textView" />

    <TextView
        android:id="@+id/new_password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Mật khẩu mới"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_password_editText" />

    <EditText
        android:id="@+id/new_password_editText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/view_edittext"
        android:drawableEnd="@drawable/ic_password"
        android:hint="@string/insert_content"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@id/old_password_editText"
        app:layout_constraintStart_toStartOf="@id/old_password_editText"
        app:layout_constraintTop_toBottomOf="@id/new_password_textView" />

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/view_button"
        android:text="Đổi mật khẩu"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/new_password_editText"
        app:layout_constraintStart_toStartOf="@id/new_password_editText"
        app:layout_constraintTop_toBottomOf="@id/new_password_editText" />

</androidx.constraintlayout.widget.ConstraintLayout>